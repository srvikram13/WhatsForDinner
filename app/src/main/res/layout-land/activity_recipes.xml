<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/recipe_list_fragment"
        android:name="com.whatsfordinner.whatsfordinner.RecipeListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center" />

    <FrameLayout
        android:id="@+id/recipe_detail_fragment"
        android:name="com.whatsfordinner.whatsfordinner.RecipeDetailfragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center" />

</LinearLayout>
